<%= form_for(@instrumento) do |f| %>
  <% if @instrumento.errors.any? %>
    <div id="error_explanation">
      <h2> Uppps, hay errores que deber√°s corregir:</h2>

      <ul>
      <% @instrumento.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :cod %><br />
    <%= f.number_field :cod %>
  </div>
  <div class="field">
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre %>
  </div>
  <div class="field">
    <%= f.label :marca %><br />
    <%= f.text_field :marca %>
  </div>
  <div class="field">
    <%= f.label :nro_serie %><br />
    <%= f.text_field :nro_serie %>
  </div>
  <div class="field">
    <%= f.label :observaciones %><br />
    <%= f.text_area :observaciones, :size =>" 40x5" %>
  </div>
  <div class="field">
    <%= f.label :detalles %><br />
    <%= f.text_area :detalles, :size =>" 40x5"  %>
  </div>
  <div class="field">
    <%= f.label :relacionados %><br />
    <%= f.text_area :relacionados, :size =>" 40x5"  %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
