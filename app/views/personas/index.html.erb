<h1>Listing personas</h1>

<table>
  <tr>
    <th>Codigo</th>
    <th>Apellido</th>
    <th>Nombre</th>
    <th>Dni</th>
    <th>Legajo</th>
    <th>Nacimiento</th>
    <th>Email</th>
    <th>Direccion</th>
    <th>Telefono</th>
    <th>Celular</th>
    <th>Observacion</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @personas.each do |persona| %>
  <tr>
    <td><%= persona.persona_id %></td>
    <td><%= persona.apellido %></td>
    <td><%= persona.nombre %></td>
    <td><%= persona.dni %></td>
    <td><%= persona.legajo %></td>
    <td><%= persona.nacimiento %></td>
    <td><%= persona.email %></td>
    <td><%= persona.direccion %></td>
    <td><%= persona.telefono %></td>
    <td><%= persona.celular %></td>
    <td><%= persona.observacion %></td>
    <td><%= link_to 'Show', persona %></td>
    <td><%= link_to 'Edit', edit_persona_path(persona) %></td>
    <td><%= link_to 'Destroy', persona, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

